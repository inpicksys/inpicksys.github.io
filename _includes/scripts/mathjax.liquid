{% if site.enable_math %}
  {% unless page.pseudocode %}
    <!-- MathJax -->
    <script type="text/javascript">
      window.MathJax = {
        tex: {
          inlineMath: [['\\(','\\)'], ['$', '$']],
          displayMath: [['\\[','\\]'], ['$$','$$']],
          processEscapes: true,
          tags: 'ams',  // чтобы были уравнения с номерами \begin{equation}
          macros: {
            // свои сокращения как на arXiv
            RR: '{\\mathbb{R}}',
            NN: '{\\mathbb{N}}',
            QQ: '{\\mathbb{Q}}',
            ZZ: '{\\mathbb{Z}}',
            dd: '{\\mathrm{d}}',
            e: '{\\mathrm{e}}'
          }
        },
        svg: {
          fontCache: 'global'
        }
      };
    </script>
    <script
      defer
      type="text/javascript"
      id="MathJax-script"
      src="{{ site.third_party_libraries.mathjax.url.js }}"
      integrity="{{ site.third_party_libraries.mathjax.integrity.js }}"
      crossorigin="anonymous"
    ></script>
    <script
      defer
      src="{{ site.third_party_libraries.polyfill.url.js }}"
      crossorigin="anonymous"
    ></script>
  {% endunless %}
{% endif %}
